{
  "name": "pokedex",
  "version": "0.0.1",
  "description": "a simple pokedex",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack/webpack.production.js",
    "dev": "webpack-dev-server --config ./webpack/webpack.development.js",
    "analyze": "webpack --config ./webpack/webpack.analyze.js",
    "test": "jest --config=./jest/jest.config.js",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "format": "prettier --write \"**/*.+(js|jsx|json)\""
  },
  "author": "Joe Maddalone",
  "license": "ISC",
  "dependencies": {
    "path-to-regexp": "^6.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "recoil": "0.0.10",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "tachyons": "^4.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
